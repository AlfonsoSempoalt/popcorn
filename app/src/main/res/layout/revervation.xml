<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationActivity"
    android:background="@color/negro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tv_pelicula_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hombres de negro"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="154dp"
            tools:layout_editor_absoluteY="252dp" />
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/tv_enjoyM_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="@string/tv_enjoyMovie"
            android:textSize="30sp"
            android:textColor="@color/GetMeInButton"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="342dp" />
        <TextView
            android:id="@+id/tv_nombre_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Alfonso"
            android:textStyle="normal"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="292dp" />

        <TextView
            android:id="@+id/tv_asiento_reservation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="your seat is: 15"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/GetMeInButton"
            android:layout_marginTop="15dp"
            tools:layout_editor_absoluteX="160dp"
            tools:layout_editor_absoluteY="342dp" />


    </LinearLayout>

</LinearLayout>