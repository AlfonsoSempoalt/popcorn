<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movieDescription"
    android:orientation="vertical"
    android:background="@color/negro">
    <ImageView
        android:id="@+id/iv_imgMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@drawable/bonesheader"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_movieTitle"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="wrap_content"
            android:textColor="@color/GetMeInButton"
            android:text="Bones"
            android:layout_marginLeft="15dp"
            android:textSize="25sp"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="3dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:background="@color/GetMeInButton"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_movieDescription"
        android:text="wenaaaaaaaaaaaaaaaaas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textSize="15sp"
        android:layout_marginTop="20dp"
        android:textColor="@color/LoginDescription"/>

    <androidx.constraintlayout.widget.Barrier
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:barrierDirection="top" />

    <Button
        android:id="@+id/btnBuyTickets"
        android:layout_width="150dp"
        android:layout_height="65dp"
        android:text="@string/bntBuySeat"
        android:layout_marginTop="40dp"
        android:textColor="@color/black"
        android:background="@drawable/roundbutton"
        android:layout_gravity="center"
        android:paddingHorizontal="25dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seatLeft"
        android:text="sadadsdsassdasdsa"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginTop="7dp"
        android:textColor="@color/cardview_light_background"
        />
</LinearLayout>